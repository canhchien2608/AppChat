<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/itemListRequest"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_marginBottom="15dp"
    android:layout_height="wrap_content">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/itemListRequestAvatar"
        android:layout_width="80dp"
        android:layout_height="80dp"/>
    <LinearLayout
        android:layout_marginLeft="15dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/itemListRequestName"
            android:textSize="20sp"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <RelativeLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/itemListRequestNotify"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/itemListRequestAccept"
                android:background="@drawable/background_right"
                android:textColor="#ffffff"
                android:text="Chấp nhận"
                android:layout_width="100dp"
                android:layout_height="30dp"/>
            <androidx.appcompat.widget.AppCompatButton
                android:layout_toRightOf="@id/itemListRequestAccept"
                android:id="@+id/itemListRequestCancel"
                android:layout_marginLeft="10dp"
                android:background="@drawable/list_request_background_button"
                android:textColor="#000000"
                android:text="Từ chối"
                android:layout_width="100dp"
                android:layout_height="30dp"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>