<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:padding="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/listMess_avatar"
        android:layout_width="50dp"
        android:layout_height="50dp"/>
    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/listMess_name"
            android:layout_marginLeft="10dp"
            android:textSize="17sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:visibility="gone"
            android:layout_below="@+id/listMess_name"
            android:id="@+id/listMess_lastMess"
            android:layout_marginLeft="10dp"
            android:text="last mess"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:maxLines="1"
            android:maxLength="30"
            android:visibility="gone"
            android:layout_below="@+id/listMess_name"
            android:id="@+id/listMess_me"
            android:layout_marginLeft="10dp"
            android:text="last mess"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

    <RelativeLayout
        android:gravity="right|center"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/listMess_status_on"
            android:layout_width="8dp"
            android:src="@color/green"
            android:visibility="gone"
            android:layout_height="15dp"/>
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/listMess_status_off"
            android:layout_width="15dp"
            android:src="@color/gray"
            android:visibility="gone"
            android:layout_height="8dp"/>
    </RelativeLayout>


</LinearLayout>